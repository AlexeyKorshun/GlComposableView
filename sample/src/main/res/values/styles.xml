<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> <!-- primary -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item> <!-- primary dark -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item> <!-- text on primary -->
        <item name="colorSecondary">@color/colorSecondary</item> <!-- accent-->
        <item name="colorOnSecondary">@color/colorOnSecondary</item> <!-- text on accent-->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ProgressDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">?attr/colorSecondary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="RoundedBackground">
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/shape_rect_r24_surface</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_ripple_rect_r8_stormb</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BorderedButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/bg_ripple_selectable_bordered_r8_stormb</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/col_text_btn_bordered</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="TextBodyOnSurface">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

</resources>
